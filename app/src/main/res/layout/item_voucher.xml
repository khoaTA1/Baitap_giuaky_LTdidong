<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            
            <!-- Voucher Icon -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="#FFF3E0"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_voucher"
                    android:tint="#FF6B35"/>
            </LinearLayout>
            
            <!-- Voucher Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">
                
                <TextView
                    android:id="@+id/text_voucher_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREESHIP50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                
                <TextView
                    android:id="@+id/text_voucher_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giáº£m 20% - Tá»‘i Ä‘a 50.000Ä‘"
                    android:textSize="14sp"
                    android:textColor="#FF6B35"
                    android:layout_marginTop="4dp"/>
                
                <TextView
                    android:id="@+id/text_voucher_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Œ ÄÆ¡n tá»‘i thiá»ƒu 300.000Ä‘"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"/>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    
                    <TextView
                        android:id="@+id/text_voucher_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CÃ²n 45/50"
                        android:textSize="12sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"/>
                    
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#DDD"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                    
                    <TextView
                        android:id="@+id/text_expiry_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HSD: 31/12/2025"
                        android:textSize="12sp"
                        android:textColor="#666"/>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Action Switch -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
        
        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="end">
            
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
