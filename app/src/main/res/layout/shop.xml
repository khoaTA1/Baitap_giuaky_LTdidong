<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".activities.ShopActivity">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TOOLBAR -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/primary_color"
            android:paddingHorizontal="20dp">

            <!-- BACK BUTTON -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@android:color/white"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <!-- TITLE -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸ Cá»­a hÃ ng"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_back"
                app:layout_constraintEnd_toStartOf="@id/card_search" />

            <!-- SEARCH BUTTON -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#40FFFFFF"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="@android:color/white"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- FILTER BAR -->
        <LinearLayout
            android:id="@+id/filter_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/background"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:gravity="center_vertical">

            <!-- FILTER BY CATEGORY -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter_category"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="Danh má»¥c"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_inverted"
                app:icon="@drawable/ic_filter"
                app:iconSize="18dp"
                app:iconTint="@color/text_primary_inverted"
                app:strokeColor="#6C5CE7"
                app:strokeWidth="2dp"
                app:cornerRadius="22dp"
                app:iconPadding="6dp"
                android:backgroundTint="@color/primary_color"/>

            <!-- SORT BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sort"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary_color"
                android:text="Sáº¯p xáº¿p"
                android:textColor="@color/text_primary_inverted"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="22dp"
                app:icon="@drawable/ic_sort"
                app:iconPadding="6dp"
                app:iconSize="18dp"
                app:iconTint="@color/text_primary_inverted"
                app:strokeColor="#00B894"
                app:strokeWidth="2dp" />

        </LinearLayout>

        <!-- CURRENT FILTER DISPLAY -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/current_filter_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#E8F4FD"
            app:cardElevation="0dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/current_filter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_current_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lá»c theo: Táº¥t cáº£"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0984E3" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:cardCornerRadius="14dp"
                    app:cardBackgroundColor="#FF6B6B"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/btn_clear_filter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check_circle"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        app:tint="@android:color/white"
                        tools:ignore="ContentDescription" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- PRODUCT GRID -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product" />

    <!-- EMPTY STATE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/empty_state_card"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="4dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#F0F3F7"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search"
                    app:tint="#B2BEC3"
                    tools:ignore="ContentDescription" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KhÃ´ng tÃ¬m tháº¥y sáº£n pháº©m"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lÃ²ng thá»­ vá»›i bá»™ lá»c khÃ¡c"
                android:textSize="14sp"
                android:textColor="#636E72"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:paddingVertical="8dp"
        app:itemIconSize="26dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>