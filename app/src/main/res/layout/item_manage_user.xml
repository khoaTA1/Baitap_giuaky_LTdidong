<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:backgroundTint="#E3F2FD">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person"
                android:tint="#1976D2"
                tools:ignore="UseAppTint" />
        </com.google.android.material.card.MaterialCardView>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nguyễn Văn A"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Admin"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="#FF6B6B"
                    app:chipMinHeight="24dp"
                    style="@style/Widget.Material3.Chip.Assist" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="nguyenvana@email.com"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawablePadding="6dp"
                app:drawableStartCompat="@drawable/ic_email"
                app:drawableTint="#999999" />

            <TextView
                android:id="@+id/tv_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Hà Nội, Việt Nam"
                android:textSize="13sp"
                android:textColor="#888888"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawablePadding="6dp"
                app:drawableStartCompat="@drawable/ic_location"
                app:drawableTint="#999999" />

            <TextView
                android:id="@+id/tv_user_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tham gia: 23/11/2025"
                android:textSize="12sp"
                android:textColor="#AAAAAA"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Action Menu -->
        <ImageView
            android:id="@+id/btn_user_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:src="@drawable/ic_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="#666666"
            android:contentDescription="Menu"
            tools:ignore="UseAppTint" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
