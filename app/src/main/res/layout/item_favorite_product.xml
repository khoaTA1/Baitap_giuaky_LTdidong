<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Checkbox for selection (overlay) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Product Image -->
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/iphone_15"
                android:scaleType="centerCrop"
                android:padding="8dp" />

            <!-- Selection checkbox -->
            <CheckBox
                android:id="@+id/checkbox_select"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:visibility="gone"
                android:background="@drawable/rounded_corner_8dp"
                android:backgroundTint="#80000000" />

            <!-- Favorite icon -->
            <ImageView
                android:id="@+id/btn_remove_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_favorite_border"
                android:background="@drawable/circular_button_background"
                android:backgroundTint="#80FFFFFF"
                android:padding="6dp"
                app:tint="#F44336"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPhone 15 Pro Max 256GB"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:id="@+id/text_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.590.000₫"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#DC143C"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/text_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32.590.000₫"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

            <!-- Stock status -->
            <TextView
                android:id="@+id/text_stock_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn hàng"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawablePadding="3dp"
                app:drawableTint="#4CAF50" />

            <!-- Add to cart button -->
            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Thêm vào giỏ"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_background"
                android:backgroundTint="#DC143C"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>