<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Phần nội dung có thể cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:fillViewport="true"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header với gradient đẹp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <!-- Logo và tiêu đề -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Icon Category -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_category"
                        app:tint="@android:color/white"
                        android:layout_marginBottom="12dp" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh mục sản phẩm"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khám phá sản phẩm theo danh mục"
                        android:textColor="#E0E0E0"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Danh mục Section với shadow đẹp -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_grid"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Danh mục"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_all_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem tất cả ›"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp" />
                    </LinearLayout>

                    <!-- Brands Grid với design đẹp hơn -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:orientation="horizontal">

                        <!-- Vitamin -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/brand_iphone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:background="@drawable/gradient_category_1">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/logo_vitamin"
                                    android:scaleType="fitCenter"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vitamin"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Sinh lý -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/brand_samsung"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:background="@drawable/gradient_category_2">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/logo_noitietto"
                                    android:scaleType="fitCenter"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sinh lý"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Tăng cường -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/brand_xiaomi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:background="@drawable/gradient_category_3">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/logo_health"
                                    android:scaleType="fitCenter"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tăng cường"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Điều trị -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/brand_oppo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:background="@drawable/gradient_category_4">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/logo_health1"
                                    android:scaleType="fitCenter"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Điều trị"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Tiêu hóa -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/brand_vivo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:background="@drawable/gradient_category_5">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/logo_stomach"
                                    android:scaleType="fitCenter"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tiêu hóa"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Thần kinh -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/brand_realme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:background="@drawable/gradient_category_6">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:src="@drawable/logo_brain"
                                    android:scaleType="fitCenter"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thần kinh"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Phân khúc giá Section đẹp hơn -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_price_tag"
                            app:tint="@color/icon_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Phân khúc giá"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_view_all_prices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem tất cả ›"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp" />
                    </LinearLayout>

                    <!-- Price Ranges đẹp hơn -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Dưới 1 triệu -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/price_under_5m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:background="@drawable/gradient_price_1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dưới 1 triệu"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Giá phải chăng, phù hợp mọi người"
                                        android:textColor="#E0E0E0"
                                        android:textSize="13sp"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="#FFFFFF"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Trên 1 triệu -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/price_5m_10m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:background="@drawable/gradient_price_2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Trên 1 triệu"
                                        android:textColor="#FFFFFF"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cao cấp, chất lượng vượt trội"
                                        android:textColor="#E0E0E0"
                                        android:textSize="13sp"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_arrow_forward"
                                    app:tint="#FFFFFF"
                                    android:layout_marginStart="8dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- THANH ĐIỀU HƯỚNG DƯỚI CÙNG -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>